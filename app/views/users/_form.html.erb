<h3>Create new user:</h3>

  <%= form_for @user do |f| %>
    <table>
      <td>Name:</td>
      <td><%= f.text_field :name %></td>
      <td>Age:</td>
      <td><%= f.text_field :age %></td>
      <td>Description:</td>
      <td><%= f.text_field :description %></td>
      <td>Email:</td>
      <td><%= f.text_field :email %></td>
      <td><%= f.submit %></td>
    </table>
  <% end %>
