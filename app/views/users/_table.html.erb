<h3>Users:</h3>

  <% @user.each do |user| %>
    <table>

      <td>Name:</td>
      <td><%= user.name %></td>
      <td>Age:</td>
      <td><%= user.age %></td>
      <td>Description:</td>
      <td><%= user.description %></td>
      <td>Email:</td>
      <td><%= user.email %></td>
      <td><%= link_to '[show]', user_path(user.id) %></td>
      <td><%= link_to '[edit]', edit_user_path(user.id) %></td>
      <strong><td><%= link_to '[destroy]', user_path(user.id), method: :delete %></td></strong>

    </table>
  <% end %>
